{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
        "mdc": "readonly",
        "gtag": "readonly",
        "ga": "readonly",
        "self": "readonly",
        "CodeMirror": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-new": "off",
        "comma-dangle": ["error", "never"],
        "import/extensions": ["error", "ignorePackages"]
    }
}